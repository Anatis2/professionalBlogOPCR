{% extends 'layout.twig' %}


{% block head %}
    <title>Modifier un article</title>
{% endblock %}


{% block aside %}
    <section class="content col-3">
        {{ messageConnection | raw }}
        <a href="index.php?page=seeMyProfile" class="btn btn-info">Voir mon profil</a>
    </section>
{% endblock %}


{% block content %}
    <section class="content col-9">

        <h1>Modifier un article</h1>

        {{ msgModifyArticle | raw }}

            <form method="post" class="contactForm">
                <div class="form-group">
                    <label for="titleArticle">Titre</label>
                    <input type="text" name="titleArticle" id="titleArticle" class="form-control" value="{{ article.titleArticle }}"/>
                    <br/>
                    <label for="subtitleArticle">Sous-titre</label>
                    <input type="text" name="subtitleArticle" id="subtitleArticle" class="form-control" value="{{ article.subtitleArticle }}"/>
                    <br/>
                    <label for="contentArticle">Contenu</label>
                    <textarea name="contentArticle" rows="10" id="contentArticle" class="form-control">{{ article.contentArticle }}</textarea>
                    <input type="hidden" name="idPerson" value="{{ pseudoPerson }}" />
                </div>
                <input type="submit" class="btn btn-primary" value="Modifier l'article" />
            </form>
    </section>
{% endblock %}

{% block footer %}
    {% include 'footer.twig' %}
{% endblock %}