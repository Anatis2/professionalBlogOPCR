{% extends 'layout.twig' %}


{% block head %}
    <title>Ajouter un article</title>
{% endblock %}


{% block aside %}
    <section class="content col-3">
        {{ messageConnection | raw }}
        <a href="index.php?page=seeMyProfile" class="btn btn-info">Voir mon profil</a>
    </section>
{% endblock %}


{% block content %}
    <section class="content col-9">

        {{ msgAddArticle | raw }}

        <h1>Ajouter un article</h1>
            <form method="post" class="contactForm">
                <div class="form-group">
                    <label for="titleArticle">Titre *</label>
                    <input type="text" name="titleArticle" id="titleArticle" class="form-control" required />
                    <br/>
                    <label for="subtitleArticle">Sous-titre</label>
                    <input type="text" name="subtitleArticle" id="subtitleArticle" class="form-control"/>
                    <br/>
                    <label for="contentArticle">Contenu</label>
                    <textarea name="contentArticle" rows="10" id="contentArticle" class="form-control"></textarea>
                    <input type="hidden" name="idPerson" value="{{ person_idPerson }}" />
                </div>
                <input type="submit" class="btn btn-primary">
            </form>
    </section>
{% endblock %}

{% block footer %}
    {% include 'footer.twig' %}
{% endblock %}