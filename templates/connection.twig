{% extends 'layout.twig' %}


{% block head %}
    <title>Connexion</title>
{% endblock %}


{% block content %}

    <h1>Connexion</h1>

    <form class="contactForm">
        <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text" name="nom" id="nom" placeholder="Votre nom" class="form-control" />
            <br/>
            <label for="prenom">Prénom</label>
            <input type="text" name="prenom" id="prenom" placeholder="Votre prénom" class="form-control" />
            <br/>
            <label for="email">Email</label>
            <input type="email" name="email" id="email" aria-describedby="emailHelp" placeholder="Votre adresse email" class="form-control" />
        </div>
        <input type="submit" class="btn btn-primary" value="Envoyer" />
    </form>

{% endblock %}
