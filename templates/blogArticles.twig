{% extends 'layout.twig' %}


{% block head %}
    <title>Blog</title>
{% endblock %}


{% block aside %}
    <aside class="aside col-2">
        {{ messageConnection | raw }}
        <a href="index.php?page=addArticle" class="btn btn-info">Ajouter un article</a>
    </aside>
{% endblock %}


{% block content %}

    <section class="content col-10">
        <h1>Articles du blog</h1>
        <div class="articles">

            {% for article in articles %}
                <article class="article">
                    <h3 class="titleArticle"><a href="index.php?page=article&idArticle={{ article.idArticle }}">{{ article.titleArticle }}</a></h3>
                    <p class="subtitleArticle">{{ article.subtitleArticle | nl2br }}</p>
                    <p class="dateCreationArticle"><em>Publi√© le {{ article.dateArticle }} par {{ article.pseudoPerson }}</em></p>
                </article>

            {% endfor %}

            {{ messageArticles | raw }}

        </div>

        <div class="pagesManagement">
            <span class="previousPage"><a href="index.php?page=blog&numPage={{ previousPage }}">{{ textPreviousPage }}</a></span>
            <span class="currentPage col-lg-12 col-md-12 col-sm-1 col-xs-1">{{ currentPage }}</span>
            <span class="nextPage"><a href="index.php?page=blog&numPage={{ nextPage }}">{{ textNextPage }}</a></span>
        </div>
    </section>


{% endblock %}
